{
  "extends": "./tsconfig.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*old-*.{ts,tsx}",
    "lib/api/examples/**",
    "lib/OLD_*",
    "components/**/OLD_*",
    "components/**/lib/OLD_*",
    "tests/**",
    "scripts/**"
  ]
}