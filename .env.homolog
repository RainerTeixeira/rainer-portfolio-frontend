# ============================================================================
# Configuração do Ambiente de Homologação - rainersoft.com.br (API Local)
# ============================================================================
# URL base do frontend (Next.js)
NEXT_PUBLIC_BASE_URL=https://rainersoft.com.br

# ============================================================================
# Configuração da API Local via ngrok
# ============================================================================
# URL base da API exposta via ngrok (substitua pela sua URL do ngrok)
NEXT_PUBLIC_API_URL=https://wet-groups-carry.loca.lt

# URL de callback OAuth para produção
NEXT_PUBLIC_OAUTH_REDIRECT_SIGN_IN=https://rainersoft.com.br/dashboard/login/callback

# Configurações de timeout e retry
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_MAX_RETRIES=3
NEXT_PUBLIC_API_RETRY_DELAY=1000

# ============================================================================
# Modo de Autenticação
# ============================================================================
# Usar autenticação real via backend/Cognito
NEXT_PUBLIC_FORCE_COGNITO_AUTH=true

# ============================================================================
# Configurações de Depuração
# ============================================================================
# Habilita logs detalhados no console (desativar em produção)
NEXT_PUBLIC_DEBUG_MODE=true

# Desativa o React Strict Mode (manter como true apenas se necessário)
NEXT_PUBLIC_DISABLE_STRICT_MODE=false

# ============================================================================
# Configurações de Build
# ============================================================================
# Otimizações para produção
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=production
