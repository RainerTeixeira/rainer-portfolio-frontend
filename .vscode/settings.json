{
  // Tailwind CSS IntelliSense Configuration
  "tailwindCSS.experimental.classRegex": [
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"],
    ["className\\s*[:=]\\s*['\"`]([^'\"`]*)['\"`]"]
  ],
  
      // Desabilitar sugestões incorretas de classes canônicas
      // O Tailwind CSS usa bg-gradient-to-* (não bg-linear-to-*)
      "tailwindCSS.suggestions": true,
      "tailwindCSS.validate": false,
      "tailwindCSS.lint.suggestCanonicalClasses": false,
      "tailwindCSS.showPixelEquivalents": false,
  
  // Configurações do TypeScript
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  
  // Configurações do editor
  "editor.quickSuggestions": {
    "strings": true
  },
  
  // CSS IntelliSense
  "css.validate": true,
  "css.lint.unknownAtRules": "ignore",
  
  // Tailwind CSS - Configurações de lint
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidConfigPath": "error",
  "tailwindCSS.lint.invalidScreen": "error",
  "tailwindCSS.lint.invalidTailwindDirective": "error",
  "tailwindCSS.lint.invalidVariant": "error",
  "tailwindCSS.lint.recommendedVariantOrder": "warning",
  "tailwindCSS.lint.invalidColorFormat": "error",
  
  // Configurar arquivo de configuração do Tailwind
  // Aponta para o arquivo TypeScript que é o principal
  "tailwindCSS.experimental.configFile": "./tailwind.config.ts",
  
  // Ignorar avisos específicos sobre sugestões canônicas
  "tailwindCSS.emmetCompletions": true,
  
  // Desabilitar sugestões de classes canônicas incorretas
  // O IntelliSense às vezes sugere bg-linear-to-* ao invés de bg-gradient-to-*
  // Esta configuração força o uso do arquivo de config correto
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.next/**"
  ]
}
